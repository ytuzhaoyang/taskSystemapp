<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#13A5C5" >

    <Button
        android:id="@+id/but_hometitle_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_margin="5dip"
        android:background="@drawable/ic_notification_content" />

    <Spinner
        android:id="@+id/sp_home_selectschool"
        style="@android:attr/spinnerItemStyle"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:background="#13A5C5"
        android:popupBackground="#00ddff" >
    </Spinner>

   

    <Button
        android:id="@+id/but_hometitle_pubtask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        
        android:background="@drawable/write_blue_pressed" />

    <Button
        android:id="@+id/but_hometitle_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/but_hometitle_pubtask"
        android:background="@drawable/ic_action_notify" />

</RelativeLayout>